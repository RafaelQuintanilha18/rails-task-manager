<h2 class="h2"><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>
<div class="showButtons">
<%= link_to "Back to the list", tasks_path, class: "btn btn-dark" %>
<%= link_to "Edit", edit_task_path, class: "btn btn-info" %>
<%= link_to "Delete", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>
</div>
