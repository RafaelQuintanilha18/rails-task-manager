<h1>Edit your Task</h1>
<div class="newbox" class="form-group">
<%=  form_for(@task) do |f| %>
<%= f.label :title %>
<%= f.text_field :title, class: "form-control"  %>
<%= f.label :details %>
<%= f.text_area :details, class: "form-control" %>
<%= f.label :completed %>
<%= f.check_box :completed %>
<br>
<%= f.submit id: "formButton", class: "btn btn-primary" %>
<% end %>
</div>

<%= link_to "Back to the list", tasks_path %>
